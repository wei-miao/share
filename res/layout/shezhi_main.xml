<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee" >
    
    
     <LinearLayout
        android:id="@+id/shezhi_bar"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/back_actionbar" 
        >

        <ImageButton
            android:id="@+id/shezhi_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/back_img" />
   
         <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="8dp"
             android:layout_gravity="center"
             android:text="设置"
             android:textColor="#ffffff"
             android:textSize="20sp"
             />
    </LinearLayout>
    
    <ScrollView 
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:layout_below="@+id/shezhi_bar"
       >
       <LinearLayout 
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
       
           >
           <RelativeLayout 
               android:id="@+id/shezhi_jibenzl"
               android:layout_width="fill_parent"
               android:layout_height="50dp"
          	android:background="#ffffff"
               >
               <TextView 
                   android:layout_width="wrap_content"
                   android:layout_height="fill_parent"
                   android:gravity="center"
                   android:layout_marginLeft="25dp"
                   android:text="基本资料"
                   android:textSize="17dp"
                   />
               <ImageView 
                   android:layout_height="20dp"
                   android:layout_width="20dp"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="60dp"
                   android:layout_marginTop="16dp"
                   android:layout_gravity="center_vertical"
                   android:background="@drawable/my_jiantou"
                   />
         
           </RelativeLayout>
           
           
             <RelativeLayout 
               android:id="@+id/shezhi_xiugaimm"
               android:layout_width="fill_parent"
               android:layout_height="50dp" 
                android:layout_marginTop="2dp"
          	android:background="#ffffff"
               >
               <TextView 
               
                   android:layout_width="wrap_content"
                   android:layout_height="fill_parent"
                   android:gravity="center"
                   android:layout_marginLeft="25dp"
                   android:text="修改密码"
                   android:textSize="17dp"
                   />
               <ImageView 
                   android:layout_height="20dp"
                   android:layout_width="20dp"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="60dp"
                   android:layout_marginTop="16dp"
                   android:layout_gravity="center_vertical"
                   android:background="@drawable/my_jiantou"
                   />
            
           </RelativeLayout>
           
               <RelativeLayout 
               android:id="@+id/shezhi_infoshezhi"
               android:layout_width="fill_parent"
               android:layout_height="50dp"
                   android:layout_marginTop="2dp"
          	android:background="#ffffff"
               >
             
               <TextView 
               
                   android:layout_width="wrap_content"
                   android:layout_height="fill_parent"
                   android:gravity="center"
                   android:layout_marginLeft="25dp"
                   android:text="消息设置"
                   android:textSize="17dp"
                   />
               <ImageView 
                   android:layout_height="20dp"
                   android:layout_width="20dp"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="60dp"
                   android:layout_marginTop="16dp"
                   android:layout_gravity="center_vertical"
                   android:background="@drawable/my_jiantou"
                   />
               
           </RelativeLayout>
           
                 <RelativeLayout 
               android:id="@+id/shezhi_guanyu"
               android:layout_width="fill_parent"
               android:layout_height="50dp"
                   android:layout_marginTop="2dp"
          	android:background="#ffffff"
               >
            
               <TextView 
                 
                   android:layout_width="wrap_content"
                   android:layout_height="fill_parent"
                   android:gravity="center"
                   android:layout_marginLeft="25dp"
                   android:text="关于SHARE"
                   android:textSize="17dp"
                   />
               <ImageView 
                   android:layout_height="20dp"
                   android:layout_width="20dp"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="60dp"
                   android:layout_marginTop="16dp"
                   android:layout_gravity="center_vertical"
                   android:background="@drawable/my_jiantou"
                   />
                
           </RelativeLayout>
           
                   <RelativeLayout 
               android:id="@+id/shezhi_qingchu"
               android:layout_width="fill_parent"
               android:layout_height="50dp"
                   android:layout_marginTop="2dp"
          	android:background="#ffffff"
               >
           
               <TextView 
                  
                   android:layout_width="wrap_content"
                   android:layout_height="fill_parent"
                   android:gravity="center"
                   android:layout_marginLeft="25dp"
                   android:text="清除缓存"
                   android:textSize="17dp"
                   />
               <ImageView 
                   android:layout_height="20dp"
                   android:layout_width="20dp"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="60dp"
                   android:layout_marginTop="16dp"
                   android:layout_gravity="center_vertical"
                   android:background="@drawable/my_jiantou"
                   />
             
           </RelativeLayout>
           
                     
       </LinearLayout>
       
   </ScrollView>

</RelativeLayout>
