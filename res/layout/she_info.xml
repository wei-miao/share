<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee">
        <LinearLayout
        android:id="@+id/info1_bar"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/back_actionbar" 
        >

        <ImageButton
            android:id="@+id/info1_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/back_img" />
   
         <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="8dp"
             android:layout_gravity="center"
             android:text="消息设置"
             android:textColor="#ffffff"
             android:textSize="20sp"
             />
    </LinearLayout>
    
          <LinearLayout 
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_below="@+id/info1_bar"
       
           >
         <RelativeLayout 
               android:id="@+id/info1_jieshou"
               android:layout_width="fill_parent"
               android:layout_height="50dp"
          	android:background="#ffffff"
               >
               <TextView 
                   android:layout_width="wrap_content"
                   android:layout_height="fill_parent"
                   android:gravity="center"
                   android:layout_marginLeft="25dp"
                   android:text="接受新消息通知"
                   android:textSize="17dp"
                   />
               <ImageView 
                       android:id="@+id/info1_1"
                   android:layout_height="20dp"
                   android:layout_width="20dp"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="60dp"
                   android:layout_marginTop="16dp"
                   android:layout_gravity="center_vertical"
                   android:background="@drawable/xiaoxi_pressed"
                   android:tag="1"
                   android:onClick="imgonClick"
                   />
           </RelativeLayout>

          <RelativeLayout 
               android:id="@+id/info1_tongzhi"
               android:layout_width="fill_parent"
               android:layout_height="50dp" 
                android:layout_marginTop="2dp"
          	android:background="#ffffff"
               >
               <TextView 
               
                   android:layout_width="wrap_content"
                   android:layout_height="fill_parent"
                   android:gravity="center"
                   android:layout_marginLeft="25dp"
                   android:text="通知显示栏"
                   android:textSize="17dp"
                   />
               <ImageView 
                   android:id="@+id/info1_2"
                   android:layout_height="20dp"
                   android:layout_width="20dp"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="60dp"
                   android:layout_marginTop="16dp"
                   android:layout_gravity="center_vertical"
                   android:background="@drawable/xiaoxi_pressed"
                   android:tag="1"
                    android:onClick="imgonClick"
                   />
            
           </RelativeLayout>
           
          <RelativeLayout 
               android:id="@+id/info1_shengyin"
               android:layout_width="fill_parent"
               android:layout_height="50dp" 
                android:layout_marginTop="2dp"
          	android:background="#ffffff"
               >
               <TextView 
               
                   android:layout_width="wrap_content"
                   android:layout_height="fill_parent"
                   android:gravity="center"
                   android:layout_marginLeft="25dp"
                   android:text="声音"
                   android:textSize="17dp"
                   />
               <ImageView 
                   android:id="@+id/info1_3"
                   android:layout_height="20dp"
                   android:layout_width="20dp"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="60dp"
                   android:layout_marginTop="16dp"
                   android:layout_gravity="center_vertical"
                   android:background="@drawable/xiaoxi_pressed"
                   android:tag="1"
                    android:onClick="imgonClick"
                   /> 
           </RelativeLayout>
          
          <RelativeLayout 
               android:id="@+id/info1_zhendong"
               android:layout_width="fill_parent"
               android:layout_height="50dp" 
                android:layout_marginTop="2dp"
          	android:background="#ffffff"
               >
               <TextView 
               
                   android:layout_width="wrap_content"
                   android:layout_height="fill_parent"
                   android:gravity="center"
                   android:layout_marginLeft="25dp"
                   android:text="震动"
                   android:textSize="17dp"
                   />
               <ImageView 
                   android:id="@+id/info1_4"
                   android:layout_height="20dp"
                   android:layout_width="20dp"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="60dp"
                   android:layout_marginTop="16dp"
                   android:layout_gravity="center_vertical"
                   android:background="@drawable/xiaoxi_normal"
                   android:tag="0"
                    android:onClick="imgonClick"
                   /> 
           </RelativeLayout>
           
          <RelativeLayout 
               android:id="@+id/info1_gengxin"
               android:layout_width="fill_parent"
               android:layout_height="50dp" 
                android:layout_marginTop="2dp"
          	android:background="#ffffff"
               >
               <TextView 
               
                   android:layout_width="wrap_content"
                   android:layout_height="fill_parent"
                   android:gravity="center"
                   android:layout_marginLeft="25dp"
                   android:text="关注更新"
                   android:textSize="17dp"
                   />
               <ImageView 
                   android:id="@+id/info1_5"
                   android:layout_height="20dp"
                   android:layout_width="20dp"
                   android:layout_alignParentRight="true"
                   android:layout_marginRight="60dp"
                   android:layout_marginTop="16dp"
                   android:layout_gravity="center_vertical"
                   android:background="@drawable/xiaoxi_normal"
                   android:tag="0"
                    android:onClick="imgonClick"
                   /> 
           </RelativeLayout>
        </LinearLayout>  
</RelativeLayout>
