<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout 
        android:id="@+id/work_bar"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/background_main"
        >
        
        <ImageButton 
            android:id="@+id/work_back"
            android:layout_height="20dp"
            android:layout_width="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/back_img"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="90dp"
            android:text="SHARE"
            android:textColor="#ffffff"
            android:textSize="20sp"
            />
    </LinearLayout>
	<LinearLayout 
	    android:layout_below="@+id/work_bar"
	    android:id="@+id/work_top_half"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    android:layout_marginLeft="10dp"
	    android:orientation="horizontal"
	    >
	    
	    <ImageView 
	        android:id="@+id/work_head"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/work_head"
	        />
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        >

	        <RelativeLayout
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent" >

	            <TextView
	                android:id="@+id/work_name"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dp"
	                android:text="言希"
	                android:textSize="18sp" />

	            <TextView
	                android:id="@+id/work_time"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_alignParentRight="true"
	                android:layout_marginRight="10dp"
	                android:text="新月"
	                android:textSize="12sp" />
	        </RelativeLayout>

	        <RelativeLayout 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"          
	            android:layout_marginTop="10dp"
	            >
	            <TextView 
	                android:id="@+id/work_author"
	                android:layout_height="wrap_content"
	                android:layout_width="wrap_content"
	                android:layout_marginLeft="10dp"
	                android:textSize="15sp"
	                android:text="温衡"
	                />
	           <ImageButton 
                android:id="@+id/work_zan"
                android:layout_toLeftOf="@+id/work_zanCount"
                android:layout_width="18dp"
                android:layout_height="16dp"
                android:layout_marginRight="3dp"
                 android:focusable="false"
                android:scaleType="fitXY"
                android:background="@drawable/button_like"
                />
            <TextView 
                android:id="@+id/work_zanCount"
                android:layout_toLeftOf="@+id/work_guanzhu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="100"
                android:textColor="#0c72ba"
                />
            <ImageButton 
                android:id="@+id/work_guanzhu"
                android:layout_toLeftOf="@+id/work_guanzhuCount"
                android:layout_width="25dp"
                android:layout_height="16dp"
                android:focusable="false"
                 android:layout_marginRight="3dp"
                android:scaleType="fitXY"
                android:background="@drawable/button_guanzhu"
                />
            <TextView 
                android:id="@+id/work_guanzhuCount"
                android:layout_toLeftOf="@+id/work_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="30"
                android:textColor="#0c72ba"
                />
            <ImageButton 
                android:id="@+id/work_share"
                android:layout_toLeftOf="@+id/work_shareCount"
                android:layout_width="18dp"
                android:layout_height="16dp"
                android:focusable="false"
                android:scaleType="fitXY"
                android:layout_marginRight="3dp"
                android:background="@drawable/button_share"
                />
            <TextView 
                android:id="@+id/work_shareCount"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:text="20"
                android:textColor="#0c72ba"
                />
	        </RelativeLayout>
	    </LinearLayout>
	</LinearLayout>
	
	<ImageView 
	    android:id="@+id/work_line"
	   android:layout_marginTop="10dp"
	   android:layout_below="@+id/work_top_half"
	   android:layout_width="fill_parent"
	   android:layout_height="2dp"
	   android:background="@color/gray_dark"
	   />

	<TextView 
	    android:id="@+id/work_word"
	    android:layout_below="@+id/work_line"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="10dp"
	    android:layout_marginTop="10dp"
	    android:text="我的心里有座铜雀楼，里面住着我的言小乔。"
	    android:textSize="13sp"
	    android:background="#eeeeee"
	    />
	<ListView 
	    android:id="@+id/work_list"
	    android:layout_below="@+id/work_word"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_marginLeft="10dp"
	    android:layout_marginTop="10dp"
	    android:layout_marginRight="10dp"
	    android:layout_marginBottom="20dp"
	    android:divider="#ffffff"
	    android:dividerHeight="15dp"
	    
	    ></ListView>
</RelativeLayout>
