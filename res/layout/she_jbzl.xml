<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
      android:background="#ffffff" >
    
       <LinearLayout
        android:id="@+id/jbzl_bar"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/back_actionbar" 
        >

        <ImageButton
            android:id="@+id/jbzl_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/back_img" />
   
         <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="8dp"
             android:layout_gravity="center"
             android:text="基本资料"
             android:textColor="#ffffff"
             android:textSize="20sp"
             />
    </LinearLayout>

       <RelativeLayout
           android:layout_width="fill_parent"
           android:layout_height="fill_parent"
           android:layout_below="@+id/jbzl_bar" >

           <LinearLayout
               android:id="@+id/jbzl_img"
               android:layout_width="fill_parent"
               android:layout_height="80dp" >

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginBottom="10dp"
                   android:layout_marginLeft="20dp"
                   android:layout_marginTop="20dp"
                   android:text="头像"
                   android:textColor="#000000"
                   android:textSize="20dp" />

               <ImageView
                   android:layout_width="55dp"
                   android:layout_height="55dp"
                   android:layout_gravity="center"
                   android:layout_marginLeft="30dp"
                   android:background="@drawable/jbzl" />
           </LinearLayout>

           <LinearLayout
               android:id="@+id/jbzl_line1"
               android:layout_width="fill_parent"
               android:layout_height="3dp"
               android:layout_below="@+id/jbzl_img"
               android:background="#eeeeee"
               android:orientation="horizontal" >
           </LinearLayout>

           <LinearLayout
               android:id="@+id/jbzl_name"
               android:layout_width="fill_parent"
               android:layout_height="60dp"
               android:layout_below="@+id/jbzl_line1" >

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="20dp"
                 	android:layout_gravity="center"
                   android:text="昵称"
                   android:textColor="#000000"
                   android:textSize="20dp" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:layout_marginLeft="30dp"
                   android:text="阿衡"
                   android:textColor="#000000"
                   android:textSize="17dp" />
           </LinearLayout>

           <LinearLayout
               android:id="@+id/jbzl_line2"
               android:layout_width="fill_parent"
               android:layout_height="3dp"
               android:layout_below="@+id/jbzl_name"
               android:background="#eeeeee"
               android:orientation="horizontal" >
           </LinearLayout>

           <LinearLayout
               android:id="@+id/jbzl_qianming"
               android:layout_width="fill_parent"
               android:layout_height="60dp"
               android:layout_below="@+id/jbzl_line2" >

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:layout_marginLeft="20dp"
                  
                   android:text="签名"
                   android:textColor="#000000"
                   android:textSize="20dp" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:layout_marginLeft="30dp"
                   android:text="人若有知配百年。"
                   android:textColor="#000000"
                   android:textSize="17dp" />
           </LinearLayout>

           <LinearLayout
               android:id="@+id/jbzl_line3"
               android:layout_width="fill_parent"
               android:layout_height="3dp"
               android:layout_below="@+id/jbzl_qianming"
               android:background="#eeeeee"
               android:orientation="horizontal" >
           </LinearLayout>
           
           <LinearLayout
               android:id="@+id/jbzl_sex"
               android:layout_width="fill_parent"
               android:layout_height="60dp"
       
               android:layout_below="@+id/jbzl_line3" >

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:layout_marginLeft="20dp"
                   
                   android:text="性别"
                   android:textColor="#000000"
                   android:textSize="20dp" />
			<ImageView 
			    android:id="@+id/jbzl_nan_img"
			    android:layout_marginLeft="30dp"
			    android:background="@drawable/nan"
			    android:layout_width="15dp"
			    android:layout_height="20dp"
			    android:tag="1"
			    android:layout_gravity="center"
			    />
             <TextView 
                 android:id="@+id/jbzl_nan"
                 android:text="男"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="#000000"
                 android:textSize="17dp"
                android:layout_marginLeft="7dp"
               android:layout_gravity="center"
                 />
             <ImageView 
			    android:id="@+id/jbzl_nv_img"
			    android:layout_marginLeft="30dp"
			    android:background="@drawable/nv"
			    android:layout_width="15dp"
			    android:layout_height="20dp"
			    android:tag="0"
			    android:layout_gravity="center"
			    />
             <TextView 
                 android:id="@+id/jbzl_nv"
                 android:text="女"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="#000000"
                 android:textSize="17dp"
                android:layout_marginLeft="7dp"
               android:layout_gravity="center"
                 />
             
           </LinearLayout>

           <LinearLayout
               android:id="@+id/jbzl_line4"
               android:layout_width="fill_parent"
               android:layout_height="3dp"
               android:layout_below="@+id/jbzl_sex"
               android:background="#eeeeee"
               android:orientation="horizontal" >
           </LinearLayout> 
           
              <LinearLayout
               android:id="@+id/jbzl_email"
               android:layout_width="fill_parent"
               android:layout_height="60dp"
               android:layout_below="@+id/jbzl_line4" >

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:layout_marginLeft="20dp"
                   
                   android:text="邮箱"
                   android:textColor="#000000"
                   android:textSize="20dp" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:layout_marginLeft="30dp"
                   android:text="6####@qq.con"
                   android:textColor="#000000"
                   android:textSize="17dp" />
           </LinearLayout>

           <LinearLayout
               android:id="@+id/jbzl_line5"
               android:layout_width="fill_parent"
               android:layout_height="3dp"
               android:layout_below="@+id/jbzl_email"
               android:background="#eeeeee"
               android:orientation="horizontal" >
           </LinearLayout>
           
           
       </RelativeLayout>

</RelativeLayout>
