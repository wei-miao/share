<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp" 
    android:paddingBottom="10dp">
    
    <ImageView 
        android:id="@+id/sixin_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        />
	<TextView 
    	android:id="@+id/sixin_name"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:text="言希"
    	android:textColor="#000000"
    	android:textSize="18sp"
    	android:layout_toRightOf="@+id/sixin_img"
    	android:layout_marginLeft="10dp"	
   	 />
	<TextView 
	    android:id="@+id/sixin_message"
	    android:layout_marginLeft="10dp"
	    android:layout_marginTop="3dp"
	    android:layout_below="@+id/sixin_name"
	    android:layout_toRightOf="@+id/sixin_img"
	    android:text="电梯里是我的命！"
	    android:textColor="@color/blue"
	    android:textSize="15dp"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    />
	
	<TextView 
	    android:id="@+id/sixin_time"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentTop="true"
	    android:layout_marginRight="10dp"
	    android:text="11-23 11:23"
	    android:textColor="#000000"
	    android:textSize="12sp"
	    />
</RelativeLayout>
